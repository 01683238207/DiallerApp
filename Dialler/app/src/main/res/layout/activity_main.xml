<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hossain.dialler.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/diallButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
           android:layout_weight="1"
            android:src="@drawable/ic_dialpad_black_36dp"/>
        <ImageButton
            android:id="@+id/contactButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_contact_phone_black_36dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_above="@+id/keypad"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tev_1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:hint="Enter number"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/myButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clear" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/keypad"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circuler_button"
                android:text="1"

                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circuler_button"
                android:text="2"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circuler_button"
                android:text="3"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circuler_button"
                android:text="4"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circuler_button"
                android:text="5"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circuler_button"
                android:text="6"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circuler_button"
                android:text="7"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circuler_button"
                android:text="8"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circuler_button"
                android:text="9"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_10"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circuler_button"
                android:text="*"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circuler_button"
                android:text="0"
                android:textSize="40sp" />

            <Button
                android:id="@+id/bt_12"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circuler_button"
                android:text="#"
                android:textSize="40sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/bt_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:src="@drawable/ic_call_white_48dp" />
    </LinearLayout>
</RelativeLayout>

